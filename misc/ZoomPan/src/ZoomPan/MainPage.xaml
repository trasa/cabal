<UserControl x:Class="ZoomPan.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Anno="http://schemas.microsoft.com/expression/blend/extensions/annotations/2008"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d Anno"
    Width="1100" Height="569">
	<UserControl.Resources>
		<Storyboard x:Name="sbScale">
			<DoubleAnimation x:Name="aniScaleX" Storyboard.TargetName="LayoutRoot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="0"/>
			<DoubleAnimation x:Name="aniScaleY" Storyboard.TargetName="LayoutRoot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="0"/>
		</Storyboard>
	</UserControl.Resources>
	<Grid x:Name="BoardPanel" Width="1094" Height="569">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="994" />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>
		<Grid.Clip>
			<RectangleGeometry Rect="0,0,1094,569" />
		</Grid.Clip>

		<ScrollViewer Grid.Row="0" Grid.Column="0" x:Name="MapScroller" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
			<Canvas x:Name="ZoomEnable">
				<Canvas x:Name="LayoutRoot" Background="White" MouseWheel="LayoutRoot_MouseWheel" Width="994" Height="569">
					<Canvas.RenderTransform>
						<TransformGroup>
							<ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1" />
						</TransformGroup>
					</Canvas.RenderTransform>

					<Image
						Source="images/axisalmp.jpg" Stretch="Fill"
						Height="569"
						Width="994"
					/>
				</Canvas>
			</Canvas>
		</ScrollViewer>
	</Grid>

</UserControl>
